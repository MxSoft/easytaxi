<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
      <display-name>easytaxi</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext*.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/uncaughtException.jsp</location>
  </error-page>
  
  <servlet>
    <servlet-name>BeanFactoryUtil</servlet-name>
    <servlet-class>com.easytaxi.common.utils.BeanFactoryUtil</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>BeanFactoryUtil</servlet-name>
    <url-pattern>/BeanFactoryUtil</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>TestSqliteServlet</display-name>
    <servlet-name>TestSqliteServlet</servlet-name>
    <servlet-class>com.easytaxi.common.test.TestSqliteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestSqliteServlet</servlet-name>
    <url-pattern>/TestSqliteServlet</url-pattern>
  </servlet-mapping>
    
    <listener>
        <listener-class>com.easytaxi.common.SystemListener</listener-class>
    </listener>
	
	<!-- UTF-8 encoding -->
	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>
			com.easytaxi.common.utils.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
    <servlet>
        <description>
        </description>
        <display-name>
            LocationSeviceServlet
        </display-name>
        <servlet-name>
            LocationSeviceServlet
        </servlet-name>
        <servlet-class>
            com.easytaxi.servlet.LocationSeviceServlet
        </servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>PassengerDataManager</display-name>
    	<servlet-name>PassengerDataManager</servlet-name>
    	<servlet-class>
    	com.easytaxi.servlet.PassengerDataManager</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>TaxiDataManager</display-name>
    	<servlet-name>TaxiDataManager</servlet-name>
    	<servlet-class>
    	com.easytaxi.servlet.TaxiDataManager</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>LoginServlet</display-name>
    	<servlet-name>LoginServlet</servlet-name>
    	<servlet-class>
    	com.easytaxi.usermgr.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>RegisterServlet</display-name>
    	<servlet-name>RegisterServlet</servlet-name>
    	<servlet-class>
    	com.easytaxi.usermgr.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocationSeviceServlet</servlet-name>
        <url-pattern>/LocationSeviceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>PassengerDataManager</servlet-name>
    	<url-pattern>/passenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>TaxiDataManager</servlet-name>
    	<url-pattern>/taxi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>RegisterServlet</servlet-name>
    	<url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    
</web-app>
